<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gammagamma.kas.settings">
    
    <application>
        
        <activity
            android:name="com.gammagamma.kas.settings.SettingsActivity"
            android:label="@string/app_name">
            
            <!-- Required for app to appear in app drawer -->
            <intent-filter>
                <action android:name="action.settings.open" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        
        </activity>
    
    </application>
    
</manifest>
